# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/blog_db

# JWT配置
# 生产环境请使用强随机密钥，至少32个字符
JWT_SECRET=your-secret-key-change-in-production-at-least-32-chars

# 日志级别
# 可选值: error, warn, info, debug, trace
RUST_LOG=info

# 服务器配置
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# CORS配置
# 生产环境请配置具体的允许源，多个源用逗号分隔
# ALLOWED_ORIGINS=https://example.com,https://www.example.com
ALLOWED_ORIGINS=*

# 七牛云存储配置 (可选)
# 如不使用七牛云，可以注释掉以下配置
QINIU_ACCESS_KEY=your-qiniu-access-key
QINIU_SECRET_KEY=your-qiniu-secret-key
QINIU_BUCKET=your-bucket-name
QINIU_DOMAIN=your-cdn-domain.com

# 邮件服务配置 (可选)
# 用于发送验证邮件、通知等
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_NAME=Blog System
SMTP_FROM_EMAIL=noreply@example.com

# 文件上传配置
# 最大文件大小 (字节)
MAX_FILE_SIZE=10485760  # 10MB
# 临时文件目录
TEMP_UPLOAD_DIR=./temp_uploads

# 会话配置
# JWT令牌过期时间 (秒)
JWT_EXPIRATION=86400  # 24小时

# 数据库连接池配置
DB_MAX_CONNECTIONS=100
DB_MIN_CONNECTIONS=5
DB_CONNECT_TIMEOUT=10
DB_IDLE_TIMEOUT=600
DB_MAX_LIFETIME=1800

# 权限缓存配置
# 权限缓存过期时间 (秒)
PERM_CACHE_TTL=3600  # 1小时

# WebSocket配置
WS_HEARTBEAT_INTERVAL=5  # 心跳间隔 (秒)
WS_CLIENT_TIMEOUT=10     # 客户端超时 (秒)

# 环境标识
# 可选值: development, production
ENVIRONMENT=development

# 是否启用调试模式
DEBUG=true

# API文档配置
# 是否启用Swagger UI
ENABLE_SWAGGER=true
